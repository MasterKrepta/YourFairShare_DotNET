
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Your Fair Share - Balanced Rent Splitting</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        @Html.ActionLink("Your Fair Share", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="roommatesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Roommates
                    </a>
                    <div class="dropdown-menu" aria-labelledby="roommatesDropdown">
                        @Html.ActionLink("View Roommates", "ViewHousehold", "Home", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("Join", "Join", "Home", null, new { @class = "dropdown-item" })
                    </div>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="billDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Bills
                    </a>
                    <div class="dropdown-menu" aria-labelledby="billDropdown">
                        @Html.ActionLink("View Bills", "ViewBills", "Bill", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("Add Bill", "AddBill", "Bill", null, new { @class = "dropdown-item" })
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="paymentDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Payments
                    </a>
                    <div class="dropdown-menu" aria-labelledby="paymentDropdown">
                        @Html.ActionLink("View Payments", "ListPayments", "Payment", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("Make Payment", "AddPayment", "Payment", null, new { @class = "dropdown-item" })
                    </div>
                </li>
            </ul>
        </div>
    </nav>


    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Your Fair Share</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
