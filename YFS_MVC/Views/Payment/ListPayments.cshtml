@model IEnumerable<YFS_MVC.ViewModels.PaymentViewModel>

@{
    ViewBag.Title = "ListPayments";
}

<div class="container ">
    <div class="row">
        <div class="col-md-9">
            <h2 class="text-info">All Payments</h2>
        </div>

        <div class="col-md-3 p-2 ">
            @Html.ActionLink("Create", "AddPayment", null, new { @class = "btn btn-info" })
        </div>
    </div>
</div>

    <div class="container">
        <div class="row">
            @*sort payments by month *@
            <table class="table">
                <tr class=" bg-primary">
                    <th>
                        @Html.DisplayNameFor(model => model.Payment.DatePaid)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Payment.AmountPaid)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Roommate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bill)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Payment.DatePaid)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Payment.AmountPaid)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Roommate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bill)
                        </td>

                    </tr>
                }
            </table>
      </div>
</div>