@model YFS_MVC.ViewModels.HouseHoldViewModel

    <div class="container">
        <div class="row">
            <div class="col">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Add Payment</h4>
                    <hr />
                    <label for="bills">Select a Bill</label>
                    <select class="bills">
                        <option value="___" selected></option>
                        @foreach (var item in Model.Bills)
                        {
                            <option value="@item.BillName">@item.BillName</option>
                        }
                    </select>
                    <select>
                        <option value="___" selected></option>
                        @foreach (var item in Model.Roommates)
                        {
                            <option value="@item.FullName">@item.FullName</option>
                            //@Html.DisplayFor(model => model.Roommates)
                            //@Html.DropDownListFor(model => model.Roommates, new SelectList(Model.Roommates, "RoommateId", "FullName", new { @class = "form-control" })

                        }
                    </select>

                    </div>
                    <hr />
                    <div class="form-group">

                        <div class="col-md-4">
                            @Html.LabelFor(model => model.Payment.Amount, htmlAttributes: new { @class = "control-label col-md-4" })
                        </div>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Payment.Amount, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Payment.Amount, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-success" />
                        </div>
                    </div>
                }




                @Html.ActionLink("Back to List", "Index")
            </div>
