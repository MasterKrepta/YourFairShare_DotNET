@model YFS_MVC.ViewModels.HouseHoldViewModel
@ViewBag.selectedRoommate;

    <div class="container row">
        <div class="col-md-9">
            <h2 class="text-info">Add Payment</h2>
        </div>



    </div>
    <div class="container">
        <div class="row">
            <div class="col">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    

                    <table>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.Payment.RoommateId)</td>
                            <td>@Html.DropDownListFor(model => model.Payment.RoommateId, new SelectList(Model.Roommates, "RoommateID", "FullName"), $"{ViewBag.selectedRoommate}")</td>
                            
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.Payment.BillId)</td>
                            <td>@Html.DropDownListFor(model => model.Payment.BillId, new SelectList(Model.Bills, "ID", "BillName"), $"{ViewBag.selectedBill}")</td>
                        </tr>
                        
                        
                    </table>
                    </div>
                    <hr />
                    <div class="form-group">
                        <div class="col-md-4 bg-secondary"></div>
                        <h4>Amount due: @ViewBag.AmountOwed</h4>
                        <div class="col-md-4">
                            @Html.LabelFor(model => model.Payment.AmountPaid, htmlAttributes: new { @class = "control-label col-md-4" })
                        </div>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Payment.AmountPaid, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Payment.AmountPaid, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-success" />
                        </div>
                    </div>
                }




                @Html.ActionLink("Back to List", "Index")
            </div>
